@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item"><a class="nav-link" asp-controller="Accounts" asp-action="Profile">@User.Identity.Name</a></li>
    <li class="nav-item"><a class="nav-link" asp-controller="Accounts" asp-action="Logout">Logout</a></li>
}
else
{
    <li class="nav-item"><a class="nav-link" asp-controller="Accounts" asp-action="Login">Login</a></li>
    <li class="nav-item"><a class="nav-link" asp-controller="Accounts" asp-action="Register">Register</a></li>
}
